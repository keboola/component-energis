{
    "type": "object",
    "title": "Energis Component Configuration",
    "required": ["authentication", "sync_options", "debug"],
    "properties": {
        "authentication": {
            "type": "object",
            "title": "Authentication Settings",
            "propertyOrder": 1,
            "required": ["username", "#password", "apiBaseUrl"],
            "properties": {
                "username": {
                    "type": "string",
                    "title": "Username",
                    "default": "",
                    "propertyOrder": 1
                },
                "#password": {
                    "type": "string",
                    "title": "Password",
                    "format": "password",
                    "propertyOrder": 2
                },
                "apiBaseUrl": {
                    "type": "string",
                    "title": "API Base URL",
                    "default": "https://webenergis.eu/test/1.wsc/soap",
                    "propertyOrder": 3
                }
            }
        },
        "sync_options": {
            "type": "object",
            "title": "Synchronization Options",
            "propertyOrder": 2,
            "required": ["nodes", "date_from", "date_to", "granularity"],
            "properties": {
                "nodes": {
                    "type": "array",
                    "title": "List of Nodes",
                    "items": {
                        "type": "integer",
                        "title": "Node ID"
                    },
                    "default": [],
                    "propertyOrder": 1
                },
                "date_from": {
                    "type": "string",
                    "format": "date",
                    "title": "Date From",
                    "default": "2024-12-01",
                    "propertyOrder": 2
                },
                "date_to": {
                    "type": "string",
                    "format": "date",
                    "title": "Date To",
                    "default": "2025-02-01",
                    "propertyOrder": 3
                },
                "granularity": {
                    "type": "string",
                    "title": "Data Granularity",
                    "enum": ["day", "month"],
                    "default": "day",
                    "propertyOrder": 4
                }
            }
        },
        "debug": {
            "type": "boolean",
            "title": "Enable Debug Mode",
            "default": false,
            "propertyOrder": 3
        }
    }
}